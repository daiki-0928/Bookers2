<%= render 'books/newbook' ,book: @newbook %>

<h2>User info</h2>
 <table class='table'>
  <tr><img class='sample-author1.jpg' /></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</table>

<% if @user == current_user %>
    <%= link_to "edit", edit_user_path(@user) %>
<% end %>

<h2>Books</h2>
 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <%@books.each do |book|%>
    <tr>
     <td><%= image_tag book.user.get_profile_image(100,100) %></td>
     <td><%= link_to book_path(book.id) do %>
         <%= book.title %>
         <% end %>
     </td>
     <td><%= book.body %></td>
    </tr>

   <% end %>
  </tbody>
 </table>