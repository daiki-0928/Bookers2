<h2>User info</h2>
 <table class='table'>
  <tr><img class="attachment user profile_image fallback" src="/assets/no_image-72379a4da21cb04a58337cf92d85bc39f8d534cbc78254c2085acaca82236bfa.jpg" /></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</table>

<% if @user == current_user %>
    <%= link_to "edit", edit_user_path(@user) %>
<% end %>



<h2>Book detail</h2>
 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <%@books.each do |book|%>
    <tr>
     <td><%= image_tag 'sample-author1.jpg' %></td>
     <td><%= link_to book_path(book.id) do %>
         <%= book.title %>
         <% end %>
     </td>
     <td><%= book.body %></td>
    </tr>

   <% end %>
  </tbody>
 </table>